<div class="row justify-content-md-center" style="margin-top: 30px">
      <div class="container"> 

        


        <form align="center" class="form-signin" method="POST" action="/signup">
            <h2 class="form-signin-heading">Register an Account!</h2> 
            <div class="form-group">
                <label for="usernameInput">Username</label>
                <input name="username" type="text" class="Username" id="usernameInput" placeholder="Username">
            
                <label for="passwordInput">Password</label>
                <input name="password" type="password" class="form-control" id="passwordInput" placeholder="Password">
                <button class= "btn" type="submit">Register!</button>
            </div>
            
            
        </form>
         <span style="color: red;"> {{error}}</span>
    </div>
</div>